        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screen_Login_Activity"></activity>
        <activity android:name=".team_or_personal_task_selection_screen_Activity"></activity>
        <activity android:name=".Screen_Table_Team"></activity>
        <activity android:name=".Screen_Unity_Counter"></activity>
        <activity android:name=".Screen_Battery_counter"></activity>
        <activity android:name=".personal_task_screen_Activity"></activity>
        <activity android:name=".team_task_screen_Activity"></activity>
        <activity android:name=".Screen_Table_Personal"></activity>
        <activity android:name=".Screen_Fast_View_Team_Task"></activity>
        <activity android:name=".Screen_Fast_View_Personal_Task"></activity>
        <activity android:name=".Screen_Incidence"></activity>
        <activity android:name=".Screen_Incidence_Summary"></activity>
        <activity android:name=".Screen_Absent"></activity>
        <activity android:name=".Screen_Execute_Task"></activity>
        <activity android:name=".Screen_Validate"></activity>
        <activity android:name=".Screen_Battery_Intake_Asignation"></activity>
        <activity android:name=".lector"></activity>
