<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Camara"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button_take_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/ic_camera_black_24dp"/>

        <Button
            android:id="@+id/button_flash_picture"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignBottom="@+id/button_torch_picture"
            android:layout_marginEnd="36dp"
            android:layout_toStartOf="@+id/button_take_picture"
            android:background="@drawable/ic_flash_off_black_24dp" />

        <Button
            android:id="@+id/button_torch_picture"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_take_picture"
            android:layout_alignBottom="@+id/button_take_picture"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/button_take_picture"
            android:background="@drawable/ic_highlight_white_24dp"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_save_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="right|bottom"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_done_black_24dp"
        android:backgroundTint="#40FF10"
        app:fabSize="normal"
        android:visibility="gone"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_cancel_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="left|bottom"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:backgroundTint="#FF2010"
        app:fabSize="normal"
        android:visibility="gone"
        />

</android.support.design.widget.CoordinatorLayout>