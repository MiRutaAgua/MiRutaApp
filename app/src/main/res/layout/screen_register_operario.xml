<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_screen_register_operario_etNombre"
            android:hint="Name"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_screen_register_operario_etApellidos"
            android:hint="Apellidos"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_screen_register_operario_etEdad"
            android:hint="Edad"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_screen_register_operario_etTelefono"
            android:hint="Telefono"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_screen_register_operario_etUsuario"
            android:hint="Nombre de Usuario"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_screen_register_operario_etClave"
            android:hint="ContraseÃ±a"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/button_screen_register_operario_foto"
            android:layout_width="141dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/screen_register_operario_foto" />

        <ImageView

            android:id="@+id/imageView_screen_register_operario_foto"
            android:layout_width="132dp"
            android:layout_height="160dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/screen_validate_imagen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:id="@+id/button_screen_register_operario_register"
            android:src="@drawable/screen_register_operario_registrar"/>
    </LinearLayout>
</LinearLayout>