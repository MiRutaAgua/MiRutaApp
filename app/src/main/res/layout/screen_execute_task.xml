<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <include
            android:id="@+id/my_toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:id="@+id/textView_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pantalla Ejecutar Tarea"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView_logo_screen_login"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_span="2"
                android:src="@drawable/screen_exec_task_label" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_instalation_photo_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="FOTO DE INSTALACIÓN"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
            <ImageView
                android:id="@+id/instalation_photo_screen_exec_task"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/screen_unity_counter_imagen"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/button_read_photo_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="FOTO DE LECTURA"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />

            <ImageView
                android:id="@+id/read_photo_screen_exec_task"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/screen_unity_counter_imagen"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/editText_lectura_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:hint="Inserte aquí la lectura"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:visibility="gone"
                android:inputType="number"
                 />
                <ImageView
                    android:id="@+id/imageview_edit_lectura_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit_blue_24dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_serial_number_photo_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="FOTO DE NÚMERO SERIE"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
            <ImageView
                android:id="@+id/serial_number_photo_screen_exec_task"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/screen_unity_counter_imagen"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textView_phones_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="10dp"
                android:text="TELÉFONOS:"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlueAppRuta"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_edit_phone1_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_phone_blue_24dp" />

                <TextView
                    android:id="@+id/textView_phone1_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:paddingTop="1dp"
                    android:text="53941930"
                    android:textSize="15dp"

                    />
                <ImageView
                    android:id="@+id/imageView_edit_phone1_screen_exec_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:paddingTop="1dp"
                    android:src="@drawable/ic_edit_blue_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_edit_phone2_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/ic_phone_blue_24dp" />

                <TextView
                    android:id="@+id/textView_phone2_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:paddingTop="1dp"
                    android:text="52416790"
                    android:textSize="15dp"

                    />
                <ImageView
                    android:id="@+id/imageView_edit_phone2_screen_exec_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:paddingTop="1dp"
                    android:src="@drawable/ic_edit_blue_24dp" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_serial_number_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="        "
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView_edit_serial_number_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:paddingTop="1dp"
                    android:src="@drawable/ic_edit_blue_24dp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_scan_serial_number_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_boton_azul"
                android:text="ESCANEO DE NUEVA SERIE"
                android:textColor="@android:color/white"
                  
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/button_scan_module_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="ESCANEO DE MÓDULO"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_module_number_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="       "
                    android:textSize="18dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageView_edit_serial_number_module_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:paddingTop="1dp"
                    android:src="@drawable/ic_edit_blue_24dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MENSAJE LIBRE"
                android:textSize="15dp"
                android:textColor="@color/colorBlueAppRuta"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/button_observations_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_blue_24dp"
                android:padding="10dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_observaciones_screen_exec_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="..."
                    android:textSize="18dp"
                    android:padding="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_anomalia_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="DATOS DE INSTALACIÓN"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
            <TextView
                android:id="@+id/textView_anomalia_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:gravity="top"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/button_final_instalation_photo_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="FOTO FINAL DE INSTALACIÓN"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />

            <ImageView
                android:id="@+id/final_instalation_photo_screen_exec_task"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/screen_unity_counter_imagen"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/button_geolocalization_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="GEOLOCALIZACIÓN"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="CÓDIGO: "
                android:textSize="15dp"
                android:textColor="@color/colorBlueAppRuta"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/textView_codigo_geolocalization_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="..."
                android:textSize="18dp"
                android:padding="10dp"
                />
            <ImageView
                android:id="@+id/button_codigo_geolocalization_screen_exec_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_edit_blue_24dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/imageView_itac_screen_exec_task"
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="ITAC"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/button_validate_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="VALIDAR"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/button_guardar_datos_screen_exec_task"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="GUARDAR DATOS"
                  
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>