<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_listView_contadores_screen_advance_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/layout_filtro_direccion_screen_filter_tareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POBLACIÃ“N"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlueAppRuta"
                    />
                <Spinner
                    android:id="@+id/spinner_filtro_poblacion_screen_filter_results"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    ></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALLE"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlueAppRuta"
                    />
                <Spinner
                    android:id="@+id/spinner_filtro_calle_screen_filter_results"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    ></Spinner>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_filtro_tipo_tareas_screen_filter_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPOS DE TAREA"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlueAppRuta"
                    />
                <Spinner
                    android:id="@+id/spinner_filtro_tipo_tarea_screen_filter_results"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    ></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALIBRE"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlueAppRuta"
                    />
                <Spinner
                    android:id="@+id/spinner_filtro_calibre_screen_filter_results"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    ></Spinner>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_listView_type_screen_filter_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESULTADOS"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorBlueAppRuta"
            />
        <ListView
            android:id="@+id/listView_contadores_screen_filter_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </LinearLayout>

</RelativeLayout>