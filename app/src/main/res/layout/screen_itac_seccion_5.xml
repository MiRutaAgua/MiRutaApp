<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <include
            android:id="@+id/my_toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_span="2"
                android:text="ESTADO DE LAS VÁLVULAS"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VÁLVULA GENERAL"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlueAppRuta"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <RadioGroup
            android:id="@+id/radioGroup_general_seccion5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:gravity="left">
            <RadioButton
                android:id="@+id/radioButton_general_no_tiene_seccion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tiene"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_general_de_bola_seccion5"
                android:layout_marginTop="5dp"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Bola"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_general_de_compuerta_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Compuerta"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_general_de_mariposa_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Mariposa"
                android:textSize="17dp"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearLayout_general_seccion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estado Válvula General"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlueAppRuta"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/spinner_general_seccion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VÁLVULA ANTIRETORNO"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlueAppRuta"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            />
        <RadioGroup
            android:id="@+id/radioGroup_antiretorno_seccion5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:gravity="left">
            <RadioButton
                android:id="@+id/radioButton_antiretorno_no_tiene_seccion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tiene"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_antiretorno_dentro_de_valvula_salida_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dentro de Válvula de Salida"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_antiretorno_modelo_cilindro_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo Cilindro"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_antiretorno_de_escuadra_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Escuadra"
                android:textSize="17dp"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/linearLayout_antiretorno_seccion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estado Válvula Antiretorno"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlueAppRuta"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/spinner_antiretorno_seccion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VÁLVULA DE ENTRADA AL CONTADOR"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlueAppRuta"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            />
        <RadioGroup
            android:id="@+id/radioGroup_entrada_seccion5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:gravity="left">
            <RadioButton
                android:id="@+id/radioButton_entrada_no_tiene_seccion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tiene"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_entrada_de_bola_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Bola"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_entrada_de_compuerta_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Compuerta"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_entrada_de_bateria_bola_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería Bola"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_entrada_de_bateria_mtc_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería M.T.C"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_entrada_de_bateria_mpf_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería M.P.F"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_entrada_de_bateria_mmv_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería M.M.V"
                android:textSize="17dp"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/linearLayout_entrada_seccion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estado Válvula Antiretorno"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlueAppRuta"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/spinner_entrada_seccion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VÁLVULA DE SALIDA DEL CONTADOR"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlueAppRuta"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            />
        <RadioGroup
            android:id="@+id/radioGroup_salida_seccion5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:gravity="left">
            <RadioButton
                android:id="@+id/radioButton_salida_no_tiene_seccion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tiene"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_salida_de_bola_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Bola"
                android:textSize="17dp"/>
            <RadioButton
            android:id="@+id/radioButton_salida_de_compuerta_seccion5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De Compuerta"
            android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_salida_de_bateria_bola_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería Bola"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_salida_de_bateria_mtc_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería M.T.C"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_salida_de_bateria_mpf_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería M.P.F"
                android:textSize="17dp"/>
            <RadioButton
                android:id="@+id/radioButton_salida_de_bateria_mmv_seccion5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De Batería M.M.V"
                android:textSize="17dp"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearLayout_salida_seccion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estado Válvula Antiretorno"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlueAppRuta"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/spinner_salida_seccion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/editText_nota_screen_seccion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:hint="Nota"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:id="@+id/button_guardar_datos_screen_seccion5"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="GUARDAR DATOS"

                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>