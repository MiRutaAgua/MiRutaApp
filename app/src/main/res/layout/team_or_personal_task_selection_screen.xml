<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <!--<include layout = "@layout/toolbar"-->
            <!--android:id="@+id/my_toolbar"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/fondo_layout_pant_tareas"
                >
            <ImageView
                android:id="@+id/imageView_atras_screen_team_or_personal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/atras_icon"
                android:layout_marginBottom="30dp"
                />
            <ImageView
                android:layout_marginLeft="230dp"
                android:id="@+id/imageView_menu_screen_team_or_personal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/menu_icon"
                android:layout_marginBottom="30dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="40dip"
                    >
                    <Button
                        android:id="@+id/button_tarea_equipo"
                        android:layout_width="300dp"
                        android:layout_height="75dp"
                        android:background="@drawable/screen_tareas_tareas_equipo"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/button_tarea_personal"
                        android:layout_width="300dp"
                        android:layout_height="75dp"
                        android:background="@drawable/screen_tareas_tareas_operario"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GESTOR"
                        android:textColor="@color/colorBlueAppRuta"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/spinner_filtro_gestor_screen_team_or_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        ></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_sync_team_or_personal_task_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    >
                    <Button
                        android:id="@+id/button_sync_team_or_personal_task_screen"
                        android:gravity="center"
                        android:foregroundGravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/sync_button"
                        />

                    <TextView
                        android:id="@+id/textView_sync_team_or_personal_task_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="SINCRONIZAR"
                        android:textColor="@color/colorBlueAppRuta"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_citas_vencidas_team_or_personal_task_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="25dp"
                    >
                    <Button
                        android:id="@+id/button_notification_team_or_personal_task_screen"
                        android:gravity="center"
                        android:foregroundGravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/warning"
                        />

                    <TextView
                        android:id="@+id/textView_citas__team_or_personal_task_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="EXISTEN CITAS DE HOY O ALGUNAS SE HAN VENCIDO"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlueAppRuta"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>