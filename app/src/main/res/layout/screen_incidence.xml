<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/label_incidencias_screen_incidence"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/screen_incidence_incidencias" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/spinner_instalacion_incorrecta"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >
        </Spinner>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="50dp"
            >

            <ImageView
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:src="@drawable/screen_incidence_foto1" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:src="@drawable/screen_incidence_foto2" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:src="@drawable/screen_incidence_foto3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TelÃ©fonos:"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="636489090"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="636489090"
                android:textSize="16dp" />



        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/button_geolocalizar_screen_incidence"
                    android:layout_width="266dp"
                    android:layout_height="50dp"
                    android:src="@drawable/screen_incidence_geolocalizar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/button_firma_del_cliente_screen_incidence"
                    android:layout_width="266dp"
                    android:layout_height="50dp"
                    android:src="@drawable/screen_incidence_firma_del_cliente" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
</LinearLayout>
</ScrollView>