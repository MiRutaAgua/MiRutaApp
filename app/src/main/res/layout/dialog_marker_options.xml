<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="45dp"
    android:background="#cbcbcb"
    >
    <Button
        android:id="@+id/button_marker_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar marcador"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/button_current_location"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_my_location_black_24dp"
        app:layout_constraintStart_toEndOf="@id/button_marker_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>