<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="60dp"
        >

        <include layout = "@layout/toolbar"
            android:id="@+id/my_toolbar"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:src="@drawable/screen_unity_counter_label"
                android:text="Modo Batería"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp"
            >
            <Button
                android:id="@+id/button_modo_bateria_screen_unity_counter"
                android:layout_width="268dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:text="PASAR A MODO BATERÍA"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlueAppRuta"
                android:background="@drawable/fondo_boton_blanco"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/button_ejecutar_tarea_screen_unity_counter"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:text="EJECUTAR TAREA"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/button_abandonado_ausente_screen_unity_counter"
                android:layout_width="265dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:text="ABONADO AUSENTE"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/button_incidencia_screen_unity_counter"
                android:layout_width="265dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:text="INCIDENCIA"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/button_geolocalization_screen_unity_counter"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:text="GEOLOCALIZACIÓN"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >
            <Button
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:fontFamily="@font/segoeui"
                android:text="TRAZAR RUTA"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                android:id="@+id/button_trazar_ruta_screen_unity_counter"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/fondo_dir"
            >
            <TextView
                android:textColor="@color/colorBlueAppRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:text="DIRECCIÓN:"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView_direccion_screen_unity_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Calle 136 #4903 /Ave 49 y Ave 51" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:background="@drawable/fondo_datos_contador"
                >
                <TextView
                    android:textColor="@color/colorBlueAppRuta"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="TAREA:"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/textView_tipo_tarea_screen_unity_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Nuevo Contador Instalar 15mm"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="132dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:gravity="left"
                android:background="@drawable/fondo_datos_contador"
                >
                <TextView
                    android:textColor="@color/colorBlueAppRuta"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Nº ABONADO:"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView_numero_abonado_screen_unity_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="023 456"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight= "60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/fondo_dir"
            >
            <TextView
                android:textColor="@color/colorBlueAppRuta"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATOS ESPECÍFICOS"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView_datos_especificos_screen_unity_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:text="El garaje tiene una puerta verde y suelen salir a las 8:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/fondo_datos_contador"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorBlueAppRuta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:text="DATOS DE CONTADOR:"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serie: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_unity_counter_serie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" C11FA 666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lectura: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_unity_counter_lectura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 1347 m3"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calibre: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_unity_counter_calibre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Calibre 20-190"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_unity_counter_ubicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Fregadera"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acceso: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_unity_counter_acceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Garaje"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageView_screen_unity_counter_imagen"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/screen_unity_counter_imagen"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
