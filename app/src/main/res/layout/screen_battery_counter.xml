<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top"
        >
        <include layout = "@layout/toolbar"
            android:id="@+id/my_toolbar"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="181dp"
                android:layout_gravity="center"
                android:src="@drawable/screen_battery_counter_icon" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/button_ejecutar_tarea_screen_battery_counter"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_unity_counter_exec_task" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_unity_counter_incidencia"
                android:id="@+id/button_incidencia_screen_battery_counter"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <TextView
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion:                "
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/textView_direccion_screen_battery_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:text="Calle 136 #4903 /Ave 49 y Ave 51"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos específicos:    "
            android:layout_gravity="left"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/textView_datos_especificos_screen_battery_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15sp"
            android:text="El garaje tiene una puerta verde y suelen salir a las 8:00" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Contador:"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Serie: "
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textView_screen_battery_counter_serie"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" C11FA 666666"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Lectura: "
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textView_screen_battery_counter_lectura"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" 1347 m3"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Calibre: "
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textView_screen_battery_counter_calibre"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Calibre 20-190"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Ubicacion: "
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textView_screen_battery_counter_ubicacion"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Fregadera"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Acceso: "
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textView_screen_battery_counter_acceso"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" Garaje"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageView_screen_battery_counter_imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/screen_unity_counter_imagen" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación en Batería:"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/textView_screen_battery_counter_ubicacion_bateria"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin Datos"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_battery_counter_reajustar_datos"
                android:id="@+id/button_reajustar_ubicacion_screen_battery_counter"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>