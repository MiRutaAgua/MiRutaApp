<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top"
        android:paddingBottom="40dp"
        >
        <!--<include layout = "@layout/toolbar"-->
            <!--android:id="@+id/my_toolbar"-->
            <!--/>-->
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="horizontal"
            android:background="@drawable/fondo_layout_pant_modo_bateria"
            >
            <ImageView
                android:id="@+id/imageView_atras_screen_battery_counter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/atras_icon"
                android:layout_marginBottom="30dp"
                />
            <ImageView
                android:layout_marginLeft="230dp"
                android:id="@+id/imageView_menu_screen_battery_counter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/menu_icon"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/button_ejecutar_tarea_screen_battery_counter"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="EJECUTAR TAREA"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/button_abandonado_ausente_screen_battery_counter"
                android:layout_width="265dp"
                android:layout_height="40dp"
                android:text="ABONADO AUSENTE"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <Button
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="INCIDENCIA"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                android:id="@+id/button_incidencia_screen_battery_counter"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >
            <Button
                android:id="@+id/button_geolocalization_screen_battery_counter"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="GEOLOCALIZACIÓN"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <Button
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:text="TRAZAR RUTA"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/fondo_boton_azul"
                android:id="@+id/button_trazar_ruta_screen_battery_counter"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/fondo_dir"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                 android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="DIRECCIÓN"
                android:textStyle="bold"
                android:textColor="@color/colorBlueAppRuta"
                />
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView_direccion_screen_battery_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="..." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:background="@drawable/fondo_datos_contador"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:text="ACCIÓN ORDENADA"
                    android:textColor="@color/colorBlueAppRuta"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView

                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:id="@+id/textView_tipo_tarea_screen_battery_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="80dp"
                    android:text="..."
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:gravity="left"
                android:background="@drawable/fondo_datos_contador"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="ABONADO"
                    android:textColor="@color/colorBlueAppRuta"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView_numero_abonado_screen_battery_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="..."
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/fondo_dir"
            >
            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATOS ESPECÍFICOS"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlueAppRuta"
                />
            <TextView
                android:id="@+id/textView_datos_especificos_screen_battery_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:maxHeight="66dp"
                android:text="..." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/fondo_datos_contador"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:text="DATOS DE CONTADOR"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueAppRuta"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serie: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_battery_counter_serie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lectura: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_battery_counter_lectura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calibre: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_battery_counter_calibre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_battery_counter_ubicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acceso: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_screen_battery_counter_acceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imageView_screen_battery_counter_imagen"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:src="@drawable/screen_unity_counter_imagen"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación en Batería:"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/textView_screen_battery_counter_ubicacion_bateria"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin Datos"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <Button
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:background="@drawable/screen_battery_counter_reajustar_datos"
                android:id="@+id/button_reajustar_ubicacion_screen_battery_counter"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>