<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >

    <include layout = "@layout/toolbar"
        android:id="@+id/my_toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/textViev_nombre_y_tarea_screen_validate_battery_intake_asignation"
            android:text="Camino Angel de la Guarda, 13 1dch"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="1dp"
        >

        <TextView
            android:text="FOTO DE INSTALACIÓN"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlueAppRuta"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/imageView_foto_instalacion_screen_validate_battery_intake_asignation"
            android:layout_height="500dp"
            android:layout_width="match_parent"
            android:src="@drawable/screen_validate_battery_intake_asignation_imagen"
            android:visibility="gone"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >

        <TextView
            android:text="FOTO DE LECTURA"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlueAppRuta"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        >

        <ImageView
            android:id="@+id/imageView_foto_lectura_screen_validate_battery_intake_asignation"
            android:layout_height="500dp"
            android:layout_width="match_parent"
            android:src="@drawable/screen_validate_battery_intake_asignation_imagen"
            android:layout_gravity="top"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView_numero_serie_screen_validate_battery_intake_asignation"
                    android:text="FC13FA247970"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    />
                <ImageView
                    android:id="@+id/imageView_edit_numero_serie_screen_validate_battery_intake_asignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit_blue_24dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:gravity="left"
                >

                <TextView
                    android:text="LECTURA ANTERIOR"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueAppRuta"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/textView_lectura_anterior_value_screen_validate_battery_intake_asignation"
                    android:text="..."
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:paddingTop="1dp"
                    android:id="@+id/imageView_edit_lectura_anterior_screen_validate_battery_intake_asignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit_blue_24dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="LECTURA ÚLTIMA"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueAppRuta"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/textView_lectura_ultima_screen_validate_battery_intake_asignation"
                    />

                <TextView
                    android:id="@+id/textView_lectura_ultima_value_screen_validate_battery_intake_asignation"
                    android:text="..."
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:paddingTop="1dp"
                    android:id="@+id/imageView_edit_lectura_ultima_screen_validate_battery_intake_asignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit_blue_24dp"
                    />
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:text="NÚMERO DE SERIE"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlueAppRuta"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textView_numero_serie_nuevo_screen_validate_battery_intake_asignation"
                android:text="F27337"
                android:textSize="18dp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                />
            <ImageView
                android:paddingTop="1dp"
                android:id="@+id/imageView_edit_new_serial_number_screen_validate_battery_intake_asignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_edit_blue_24dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_foto_numero_serie_screen_validate_battery_intake_asignation"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/screen_validate_battery_intake_asignation_imagen"
            android:visibility="gone"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:text="UBICACIÓN: "
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorBlueAppRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/textView_ubicacion_screen_validate_battery_intake_asignation"
            android:text=" F1-T1"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="OBSERVACIONES"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorBlueAppRuta"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_observaciones_screen_validate_battery_intake_asignation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Llaves nuevas, se entra con maestras"
            android:textSize="18sp"
            android:padding="10dp"/>
        <ImageView
            android:id="@+id/imageView_edit_obsevations_screen_validate_battery_intake_asignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_edit_blue_24dp"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingBottom="50dp"
        >
        <Button
            android:id="@+id/button_guardar_datos_screen_validate_battery_intake_asignation"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:fontFamily="@font/segoeui"
            android:text="GUARDAR DATOS PREVIOS"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/fondo_boton_azul"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>