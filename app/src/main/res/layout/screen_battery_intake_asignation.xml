<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="top"
        >
        <include layout = "@layout/toolbar"
            android:id="@+id/my_toolbar"
            />
        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            >
            <ImageView
                android:id="@+id/label_asignacion_toma_bateria_screen_battery_intake_asignation"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/screen_battery_intake_asignation_asignacion_toma_bateria" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >


            <ImageView
                android:id="@+id/button_foto_instalacion_screen_battery_intake_asignation"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_battery_intake_asignation_foto_instalacion" />
            <ImageView
                android:id="@+id/imageView_foto_instalacion_screen_battery_intake_asignation"
                android:layout_height="500dp"
                android:layout_width="match_parent"
                android:src="@drawable/screen_validate_battery_intake_asignation_imagen"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/button_foto_lectura_screen_battery_intake_asignation"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_battery_intake_asignation_foto_lectura" />
            <ImageView
                android:id="@+id/imageView_foto_lectura_screen_battery_intake_asignation"
                android:layout_height="500dp"
                android:layout_width="match_parent"
                android:src="@drawable/screen_validate_battery_intake_asignation_imagen"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/button_foto_numero_serie_screen_battery_intake_asignation"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_battery_intake_asignation_foto_numero_de_serie" />
            <ImageView
                android:id="@+id/imageView_foto_numero_serie_screen_battery_intake_asignation"
                android:layout_height="500dp"
                android:layout_width="match_parent"
                android:src="@drawable/screen_validate_battery_intake_asignation_imagen"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="50dp"
                >

                <LinearLayout
                    android:gravity="left"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BATERÃA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingTop="20dp"
                        />
                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/editText_bateria_screen_battery_intake_asignation"
                        android:inputType="number"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_marginLeft="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FILA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingTop="20dp"
                        />

                    <EditText
                        android:inputType="number"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="46dp"
                        android:id="@+id/editText_fila_screen_battery_intake_asignation"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_marginLeft="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COLUMNA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingTop="20dp"
                        />

                    <EditText
                        android:inputType="number"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/editText_columna_screen_battery_intake_asignation"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            >

            <ImageView
                android:id="@+id/button_validar_screen_battery_intake_asignation"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:src="@drawable/screen_battery_intake_asignation_validar" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>